{
//  "extends": "../node_modules/@tsconfig/svelte/tsconfig.json",
  "compilerOptions": {
    "jsx": "react",
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ESNext", "DOM"],
    "moduleResolution": "Node",
    "strict": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noEmit": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
//    "rootDir": ".",
    "outDir": "libs",
    "allowJs": true
  },
  "include": [
    "./src/resources/**/*.ts"
  ]
}
